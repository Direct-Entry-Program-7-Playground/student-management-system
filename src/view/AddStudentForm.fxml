                     </children>
                  </HBox>
                  <JFXTextField labelFloat="true" promptText="Contact Number" styleClass="JFXTextField" text="Eg. 077-4567891" />
                  <JFXTextField labelFloat="true" promptText="Email" styleClass="JFXTextField" text="Eg. nipun@ijse.lk" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="200.0">
               <children>
                  <JFXButton defaultButton="true" maxHeight="40.0" maxWidth="400.0" prefHeight="40.0" prefWidth="300.0" ripplerFill="#10062b" text="ADD NEW STUDENT">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="jfx-rippler" />
                     </styleClass>
                  </JFXButton>
               </children>
            </HBox>
