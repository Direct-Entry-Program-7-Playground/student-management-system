                     <children>
                        <ImageView id="addStudentImg" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                        <Label alignment="CENTER" contentDisplay="CENTER" styleClass="title" text="Add New Student" HBox.hgrow="ALWAYS">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="30.0" VBox.vgrow="ALWAYS">
               <children>
                  <JFXTextField labelFloat="true" promptText="NIC" styleClass="JFXTextField" text="Eg. 83451234V" VBox.vgrow="NEVER" />
                  <JFXTextField labelFloat="true" promptText="Full Name" styleClass="JFXTextField" text="Eg. Nipun Samarawickrama" />
                  <JFXTextField labelFloat="true" promptText="Address" styleClass="JFXTextField" text="Eg. No:45/3, Galle Road, Panadura" />
