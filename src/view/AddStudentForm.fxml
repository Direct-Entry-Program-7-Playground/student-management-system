<AnchorPane prefHeight="500.0" prefWidth="680.0" stylesheets="@../assets/css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.controller.AddStudentFormController">
   <children>
      <VBox layoutX="36.0" prefHeight="400.0" prefWidth="680.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
